<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/login_bk_color"
        android:backgroundTint="@color/login_bk_color"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/partImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:layout_marginBottom="@dimen/loginViewsMargin"
                android:scaleType="centerCrop"
                android:src="@drawable/gear_def_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:shapeAppearance="@style/circle" />

            <TextView
                android:id="@+id/txtPartName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/txtPrice"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/partImageView"/>

            <TextView
                android:id="@+id/txtMake"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:layout_marginEnd="10dp"
                android:text="Make"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="15dp"
                app:layout_constraintEnd_toStartOf="@id/txtModel"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@id/txtPartName"
                app:layout_constraintStart_toEndOf="@id/partImageView"/>

            <TextView
                android:id="@+id/txtYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:layout_marginEnd="10dp"
                android:text="Year"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="15dp"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toStartOf="@id/txtCategory"
                app:layout_constraintTop_toBottomOf="@id/txtMake"
                app:layout_constraintStart_toEndOf="@id/partImageView"
                app:layout_constraintBottom_toBottomOf="@id/partImageView"/>

            <TextView
                android:id="@+id/txtModel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:layout_marginEnd="15dp"
                android:text="Model"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toStartOf="@id/txtPrice"
                app:layout_constraintBaseline_toBaselineOf="@id/txtMake"
                app:layout_constraintTop_toBottomOf="@id/txtPartName"
                app:layout_constraintStart_toEndOf="@id/txtMake"/>

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:layout_marginEnd="15dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Category"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toStartOf="@id/txtPrice"
                app:layout_constraintBaseline_toBaselineOf="@id/txtYear"
                app:layout_constraintTop_toBottomOf="@id/txtModel"
                app:layout_constraintStart_toEndOf="@id/txtYear"
                app:layout_constraintBottom_toBottomOf="@id/partImageView"/>


            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:layout_marginEnd="@dimen/loginViewsMargin"
                android:text="USD Price "
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/themeColor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintBaseline_toBaselineOf="@id/txtPartName"
                app:layout_constraintStart_toEndOf="@id/txtPartName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txtNegotiable"
                android:layout_width="0dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:layout_marginEnd="@dimen/loginViewsMargin"
                android:layout_marginStart="15dp"
                android:text="Negotiable"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/txtModel"
                app:layout_constraintTop_toBottomOf="@id/txtPrice"
                app:layout_constraintStart_toEndOf="@id/txtPartName"/>

            <TextView
                android:id="@+id/txtCondition"
                android:layout_width="0dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:layout_marginEnd="@dimen/loginViewsMargin"
                android:layout_marginStart="15dp"
                android:text="Condition"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/txtCategory"
                app:layout_constraintTop_toBottomOf="@id/txtNegotiable"
                app:layout_constraintStart_toEndOf="@id/txtPartName"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>