<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagePartsActivity">
<TextView
    android:id="@+id/categorie"
     android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="\t\tParts"
    android:textStyle="bold"
    android:textSize="35sp"
    android:paddingLeft="31dp"
    android:paddingTop="24dp"
    android:textColor="@color/colorPrimaryDark"
    android:background="@color/colorAccent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/back_arrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/categorie"
        app:layout_constraintStart_toStartOf="@id/categorie"
        app:layout_constraintTop_toTopOf="@id/categorie"
        app:layout_constraintVertical_bias="1.0" />

    <ListView
        android:id="@+id/parts_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categorie" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        style="@style/FloatingActionButton"
        android:src="@drawable/ic_plus"
        android:layout_gravity="bottom|end"/>
</androidx.constraintlayout.widget.ConstraintLayout>